# Frontend environment example
# Copy to .env or .env.development.local and adjust values.

# Base URL for the backend API. Example:
# REACT_APP_API_BASE_URL=http://localhost:3001
# If omitted, the app will:
#  - use http://localhost:3001 when running on http://localhost:3000 (local dev)
#  - use same-origin in all other cases
REACT_APP_API_BASE_URL=

# Use in-memory mocks instead of the real backend.
# Must be the string "true" to enable mocks. Defaults to false.
REACT_APP_USE_MOCKS=false

# Optional defaults
# REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# Dev convenience (optional)
# REACT_APP_DISABLE_STRICT_MODE=false
# GENERATE_SOURCEMAP=false
