# Frontend (Create React App) environment variables

# Base URL for the backend API.
# Example for local dev if backend runs on 3001 and frontend on 3000:
# http://localhost:3001
REACT_APP_API_BASE_URL=http://localhost:3001

# When "true", the frontend uses in-memory mock data and does not call the backend.
# Useful for UI development when the backend is not available.
REACT_APP_USE_MOCKS=false

# Default page size for the devices list pagination (integer).
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10
