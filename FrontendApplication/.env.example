# Frontend (Create React App) environment variables

# PUBLIC_INTERFACE
# REACT_APP_API_BASE_URL
# Base URL for the backend API.
# - Local dev (frontend on 3000, backend on 3001):
#     http://localhost:3001
# - HTTPS previews: use the same host with port 3001, e.g.:
#     https://<your-preview-host>:3001
REACT_APP_API_BASE_URL=http://localhost:3001

# PUBLIC_INTERFACE
# REACT_APP_USE_MOCKS
# When "true", use an in-memory mock API instead of the backend.
REACT_APP_USE_MOCKS=false

# PUBLIC_INTERFACE
# REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT
# Default page size for pagination.
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# PUBLIC_INTERFACE
# REACT_APP_DISABLE_STRICT_MODE
# If "true", disables React StrictMode in development.
REACT_APP_DISABLE_STRICT_MODE=false
