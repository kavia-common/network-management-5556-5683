# Base URL for the backend API (e.g., http://localhost:3001). If omitted, client falls back appropriately.
REACT_APP_API_BASE_URL=http://localhost:3001

# Optional flags (documented for convenience; keep/change as needed)
# When "true", use in-memory mock API instead of backend calls
# REACT_APP_USE_MOCKS=false

# Default page size for pagination (integer)
# REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# Disable React StrictMode in development (not recommended generally)
# REACT_APP_DISABLE_STRICT_MODE=false
