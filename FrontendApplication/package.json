{
  "name": "react-kavia",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:fast": "cross-env GENERATE_SOURCEMAP=false BROWSER=none PORT=3000 react-scripts start",
    "start:strict3000": "cross-env CI=true BROWSER=none PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "cross-env GENERATE_SOURCEMAP=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.test.(js|jsx|ts|tsx)",
      "<rootDir>/tests/**/*.test.(js|jsx|ts|tsx)",
      "<rootDir>/tests/**/*.integration.test.(js|jsx|ts|tsx)"
    ],
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-router|react-router-dom)/)"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "cross-env": "^7.0.3",
    "jest-environment-jsdom": "30.2.0"
  }
}
