# PUBLIC_INTERFACE
# Example environment variables for the frontend app.
# Copy this file to .env or .env.development.local and adjust values.

# Backend API base URL (e.g., http://localhost:3001). If omitted, uses same-origin.
REACT_APP_API_BASE_URL=

# Use in-memory mock API instead of backend ("true" to enable).
REACT_APP_USE_MOCKS=false

# Default page size for pagination UI.
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# Optional: disable React StrictMode in dev to measure production-like performance.
# Set to "true" to render without StrictMode. Default is false (StrictMode enabled).
REACT_APP_DISABLE_STRICT_MODE=false
