# Create React App environment variables
# Copy this file to .env (or .env.development.local) and adjust as needed.

# Base URL for the backend API
# Default local backend preview: http://localhost:3001
REACT_APP_API_BASE_URL=http://localhost:3001

# Optional: Use in-memory mocks instead of hitting the backend
REACT_APP_USE_MOCKS=false

# Optional: default pagination page size for devices list
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# Optional: speed up dev build by disabling React StrictMode double-invocation
REACT_APP_DISABLE_STRICT_MODE=false
