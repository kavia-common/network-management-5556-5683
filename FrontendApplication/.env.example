# Example environment variables for FrontendApplication (Create React App)

# PUBLIC_INTERFACE
# REACT_APP_API_BASE_URL
# Base URL for the backend API (e.g., http://localhost:3001 or https://<preview-host>:3001).
# Leave empty to use same-origin relative paths.
REACT_APP_API_BASE_URL=http://localhost:3001

# PUBLIC_INTERFACE
# REACT_APP_USE_MOCKS
# When "true", use in-memory mocks instead of calling the backend.
REACT_APP_USE_MOCKS=false

# PUBLIC_INTERFACE
# REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT
# Default rows per page for pagination.
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# PUBLIC_INTERFACE
# REACT_APP_DISABLE_STRICT_MODE
# Set to true to disable React.StrictMode locally (helps during performance testing).
REACT_APP_DISABLE_STRICT_MODE=false
