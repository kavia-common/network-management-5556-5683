# Create React App environment variables must be prefixed with REACT_APP_
# Frontend on 3000, Backend on 3001
REACT_APP_API_BASE_URL=http://localhost:3001

# Use in-memory mocks for API (disable real network calls)
REACT_APP_USE_MOCKS=false

# Default pagination size
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# Optional: disable StrictMode double-invocation in dev
# REACT_APP_DISABLE_STRICT_MODE=true
