# Example environment variables for the React frontend (Create React App)
# Copy this file to `.env` or `.env.development.local` and adjust as needed.
# After editing, restart the dev server so env changes take effect.

# Base URL for the backend API.
# For local development:
# REACT_APP_API_BASE_URL=http://localhost:3001
# For HTTPS preview (match your preview hostname):
# REACT_APP_API_BASE_URL=https://vscode-internal-28439-beta.beta01.cloud.kavia.ai:3001
REACT_APP_API_BASE_URL=http://localhost:3001

# Use in-memory mocks instead of calling backend APIs (true/false)
REACT_APP_USE_MOCKS=false

# Default page size for pagination (integer)
REACT_APP_PAGINATION_PAGE_SIZE_DEFAULT=10

# Optional: Disable React StrictMode double-invocation in dev
# REACT_APP_DISABLE_STRICT_MODE=false

# Recommended for faster rebuilds in development
# GENERATE_SOURCEMAP=false
